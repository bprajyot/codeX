# Top-level env for Docker Compose/K8s templates
# Copy into service-specific .env files as needed

# Global
ENVIRONMENT=development
APP_DOMAIN=localhost

# MySQL
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=codearena
MYSQL_USER=codearena
MYSQL_PASSWORD=codearena_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Backend
BACKEND_PORT=8080
JWT_SECRET=supersecret-jwt-key
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Executor
EXECUTOR_URL=http://executor:9090
EXECUTION_TIME_LIMIT_SECONDS=5

# Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=service-account@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREDACTED\n-----END PRIVATE KEY-----\nFIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com